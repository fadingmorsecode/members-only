<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <% if (errors && errors.length > 0) { %> <% errors.forEach((error) => { %>
    <p><%= error.msg %></p>
    <% }); %> <% } %>
    <form action="/register" , method="post">
      <label for="first-name-register">First Name</label>
      <input type="text" id="first-name-register" name="fname" required />
      <label for="last-name-register">Last Name</label>
      <input type="text" id="last-name-register" name="lname" required />
      <label for="email-register">Email</label>
      <input type="email" id="email-register" name="em" required />
      <label for="password-register">Password</label>
      <input type="password" id="password-register" name="pw" required />
      <label for="confirm-password-register">Confirm Password</label>
      <input
        type="password"
        id="confirm-password-register"
        name="cpw"
        required
      />
      <button type="submit">Register</button>
    </form>
  </body>
</html>
